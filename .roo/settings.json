    "architect": {
      "provider": "anthropic",
      "model": "claude-3-5-sonnet-20240307",
      "temperature": 0.4
    },
    "debug": {
      "provider": "anthropic",
      "model": "claude-3-5-sonnet-20240307",
      "temperature": 0.2
    },
    "db": {
      "provider": "anthropic",
      "model": "claude-3-5-sonnet-20240307",
      "temperature": 0.3
    },
    "qa": {
      "provider": "anthropic",
      "model": "claude-3-5-sonnet-20240307",
      "temperature": 0.3
    },
    "ask": {
      "provider": "anthropic",
      "model": "claude-3-5-sonnet-20240307",
      "temperature": 0.4
